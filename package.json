{
  "name": "project-action",
  "version": "0.0.1",
  "private": true,
  "description": "GitHub action to automatically assign and update issues' project information",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"**.ts\"",
    "format-check": "prettier --check \"**.ts\"",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --silent",
    "test-verbose": "jest",
    "all": "npm run format && npm run build && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeebe-io/project-action.git"
  },
  "keywords": [
    "actions",
    "project"
  ],
  "author": "zeebe-io",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^5.0.0",
    "@octokit/rest": "^18.5.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^15.6.1",
    "@vercel/ncc": "^0.28.5",
    "jest": "^26.0.23",
    "jest-circus": "^27.3.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.2"
  }
}
